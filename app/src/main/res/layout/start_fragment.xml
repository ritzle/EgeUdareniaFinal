        <!--            app:layout_constraintEnd_toStartOf="@+id/forbesText"-->
        <!--            app:layout_constraintStart_toStartOf="@+id/settingsBtn"-->
        <!--            app:layout_constraintTop_toTopOf="parent"-->
        <!--            app:srcCompat="@drawable/settings"-->

        />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        >

        <View
            android:id="@+id/playBtn"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/smooth_rect"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/playText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Starttest"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/playBtn"
            app:layout_constraintTop_toTopOf="@+id/playBtn" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>