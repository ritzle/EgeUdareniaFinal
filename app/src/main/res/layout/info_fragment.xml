<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="left"
            android:src="@drawable/back" />


        <TextView
            android:id="@+id/nameSetting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Информация"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:paddingRight="50dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/creator_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Игра сделана для защиты проекта IT школы samsung"
            android:textColor="#000000"
            android:layout_marginTop="30dp"
            android:textSize="40sp"
            android:fontFamily="sans-serif-light"
            android:gravity="center" />

        <TextView
            android:id="@+id/names_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выполнили:\nРязанов Владислав\nФлек Кирилл"
            android:textColor="#000000"
            android:textSize="40sp"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:layout_gravity="center"
            />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"

            android:layout_marginTop="100dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/samsung_it_academy_logo_ru"
            />


    </LinearLayout>




</LinearLayout>